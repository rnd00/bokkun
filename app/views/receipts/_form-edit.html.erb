<%= simple_form_for @receipt, html: {class: "form-style-9"} do |f| %>
  <%= f.input :company, label: "Purchased at" %>
  <%= f.input :date, as: :string, input_html: {class: "datepicker"}  %>
  <%= f.input :total_amount %>
  <%= f.association :trip_budget, collection: trip.trip_budgets, label_method: lambda {|trip_budget| "#{trip_budget.budget.name}"}, include_blank: false %>
  <%= f.input :photo, as: :file  %>
  <%= f.button :submit, class: "btn btn-approve w-30" %>
  <%= link_to "Go back", :back, class: "btn btn-approve w-30" %>
<% end %>